name: e2e tests

on: pull_request

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v1
      - uses: actions/setup-node@v1
        with:
          node-version: '12'
      - name: install dependencies
        run: npm i
      - name: run e2e tests
        run: npm run test:e2e
